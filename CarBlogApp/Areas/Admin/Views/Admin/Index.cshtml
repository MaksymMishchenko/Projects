@model IEnumerable<CarBlogApp.Models.Post>

@{
    ViewData["Title"] = "Admin Panel";
}

<table class="table-centered">
    <tr>
        <th>Id</th>
        <th>Title</th>
        <th>Category</th>
        <th>Date</th>
        <th>Author</th>
        <th>Actions</th>
    </tr>

    @foreach (var post in Model)
    {
        <tr>
            <td>@post.Id</td>
            <td>@post.Title</td>
            <td>@post.Category?.Name</td>
            <td>@post.Date.ToShortDateString()</td>
            <td>@post.Author</td>
            <td>
                @Html.ActionLink("Edit","Edit", new {id = post.Id})
                @Html.ActionLink("Delete","Delete", new {id = post.Id})
            </td>
        </tr>
    }
</table>