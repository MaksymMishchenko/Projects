<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarBlog</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CarBlogApp.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <header class="admin">
            <h1 class="page-heading">Admin Panel</h1>
        </header>

        <div class="admin-sidebar-top tile">
            <h3>Menu</h3>
            <ul class="site-categories">
                <li><a asp-controller="Home" asp-action="Index">Car Blog</a></li>
                <li><a asp-controller="Admin" asp-action="Index">Posts</a></li>                
                <li>@Html.RouteLink("Categories", "admin", new { area = "Admin", controller = "Admin", action = "ShowAllCategories"})</li>              
                <li class="nav-right">@Html.RouteLink("Inbox messages", "admin", new { area = "Admin", controller = "Admin", action = "ShowInboxMessages"})</li>
            </ul>
        </div>

        <main class="admin-main tile">            
                @RenderBody()           
        </main>

        <footer class="admin tile centered">
            <p>
                &copy; 2023 - CarBlogApp. All right reserved.
            </p>
        </footer>

    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
