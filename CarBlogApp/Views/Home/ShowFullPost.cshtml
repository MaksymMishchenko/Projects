@model CarBlogApp.Models.Post;

@{
    ViewData["Title"] = Model.Title;
}

<div class="media">
    <div class="media-img">
        <img src=../../@Model.Img>
    </div>

    <div class="media-text">
        <h2 class="title-inner">@Model.Title</h2>
        <div class="media-info">
            <span class="author">Author: @Model.Author</span><br />
            <span class="date">Published: @Model.Date</span>
        </div>
        <p>
            @Model.Description
        </p>
    </div>
</div>

<div>
    <p>@Model.Body</p>
    @*todo: add previous/next post button*@
</div>

